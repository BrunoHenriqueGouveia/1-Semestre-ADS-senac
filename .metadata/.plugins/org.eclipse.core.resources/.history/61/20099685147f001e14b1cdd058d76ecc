	public static double sorteOUreves(int num) {

		double valor = 0;
		if (num == 1) {
			System.out.println("Sorte");
			System.out.println("Parabéns voçe acaba de ganhar R$2000 para trocar seus pneus.");
			valor = 2000;
		} else if (num == 2) {
			System.out.println("Revés");
			System.out.println("Voçe acaba de ser multado no valor R$1000 ,placa do seu veiculo esta inelegível");
			valor = -1000;
		} else if (num == 3) {

		}

		return valor;

	}

