	public static int bemvindo() {
		Scanner ler = new Scanner(System.in);
		int qtd =0;
		do {
			System.out.println("===================");
			System.out.println("     BEM-VINDO     ");
			System.out.println(" Corrida Do Milhão ");
			System.out.println("===================");
			System.out.println();
			System.out.println("Informe a quantidade de jogadores:");
			qtd = ler.nextInt();
		} while (qtd < 1 || qtd > 3);
		
		return qtd;
		ler.close();
		
	}

