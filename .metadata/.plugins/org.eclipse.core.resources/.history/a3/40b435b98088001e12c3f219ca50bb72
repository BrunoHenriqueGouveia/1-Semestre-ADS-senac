		System.out.println("=============================================");

		int dado1 = 0, dado2 = 0;

		do {
			dado1 = dado();
			dado2 = dado();

			System.out.println("Jogue o dado " + nomes[0] + ":");
			System.out.println("Dado:" + dado1);
			System.out.println("---------------------------------------------");
			System.out.println("Jogue o dado " + nomes[1] + ":");
