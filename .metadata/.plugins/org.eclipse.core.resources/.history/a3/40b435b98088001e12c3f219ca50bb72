		} else if (dado == 10) {
			//parada livre
		} else if (dado == 11) {
			//mecanica
		} else if (dado == 12) {
			valor = 500;
		} else if (dado == 13) {
			valor =-300;
		} else if (dado == 14) {
			valor = sorteoureves(num);
		} else if (dado == 15) {
			//mecanica
		} else if (dado == 16) {
			valor = sorteoureves(num);
		} else if (dado == 17) {
			valor=-300;
		} else if (dado == 18) {
			valor = sorteoureves(num);
		} else if (dado == 19) {
			valor =500;
		} else if (dado == 20) {
			valor = sorteoureves(num);
		} else if (dado > 20) {
			valor = 5000;
		}
		return valor;

	}

